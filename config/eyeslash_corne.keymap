#define ZMK_POINTING_DEFAULT_MOVE_VAL 1200  // 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 25   // 10

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>

&mmv_input_listener { input-processors = <&zip_xy_scaler 2 1>; };

&msc_input_listener { input-processors = <&zip_scroll_scaler 2 1>; };

&msc {
    acceleration-exponent = <1>;      // 0
    time-to-max-speed-ms = <100>;     // 300
    delay-ms = <0>;                   // 0
};

&mmv {
    time-to-max-speed-ms = <500>;
    acceleration-exponent = <1>;
    trigger-period-ms = <16>;
};

/ {
    behaviors {
        ht: hold_tap {
            compatible = "zmk,behavior-hold-tap";
            display-name = "Hold+Tap";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <125>;
            flavor = "tap-preferred";
            quick-tap-ms = <200>;
        };
        ht00: hold_tap_00 {
            compatible = "zmk,behavior-hold-tap";
            display-name = "Hold+Tap <100>";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <100>;
            flavor = "tap-preferred";
            quick-tap-ms = <200>;
        };
        ht10: hold_tap_10 {
            compatible = "zmk,behavior-hold-tap";
            display-name = "Hold+Tap <110>";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <110>;
            flavor = "tap-preferred";
            quick-tap-ms = <200>;
        };
        ht20: hold_tap_20 {
            compatible = "zmk,behavior-hold-tap";
            display-name = "Hold+Tap <120>";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <120>;
            flavor = "tap-preferred";
            quick-tap-ms = <200>;
        };
        ht30: hold_tap_30 {
            compatible = "zmk,behavior-hold-tap";
            display-name = "Hold+Tap <130>";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <130>;
            flavor = "tap-preferred";
            quick-tap-ms = <200>;
        };
        ht40: hold_tap_40 {
            compatible = "zmk,behavior-hold-tap";
            display-name = "Hold+Tap <140>";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <140>;
            flavor = "tap-preferred";
            quick-tap-ms = <200>;
        };
        ht50: hold_tap_50 {
            compatible = "zmk,behavior-hold-tap";
            display-name = "Hold+Tap <150>";
            bindings = <&kp>, <&kp>;
            #binding-cells = <2>;
            tapping-term-ms = <150>;
            flavor = "tap-preferred";
            quick-tap-ms = <200>;
        };
    };

    rgb_encoder: rgb_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&rgb_ug RGB_BRI>, <&rgb_ug RGB_BRD>;
    };

    scroll_encoder: scroll_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;
        tap-ms = <100>;
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "QWERTY";
            bindings = <
// ╔═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╗                                           ╔═════════════════╗                    ╔═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╗
          &kp TAB         &ht30 Q N1       &ht30 W N2         &ht30 E N3        &ht30 R N4        &ht30 T N5                                                      &kp UP                               &ht30 Y N6        &ht30 U N7       &ht30 I N8         &ht30 O N9       &ht30 P N0          &kp BSPC
// ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣                         ╔═════════════════╬═════════════════╬═════════════════╗  ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣
      &kp LEFT_SHIFT       &kp A              &kp S             &kp D             &kp F             &kp G                                    &kp LEFT          &kp ENTER         &kp RIGHT               &kp H             &kp J             &kp K              &kp L          &kp SEMI           &kp SQT
// ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣  ╔═════════════════╗    ╚═════════════════╬═════════════════╬═════════════════╝  ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣
        &kp LCTRL          &kp Z              &kp X             &kp C             &kp V             &kp B             &kp C_MUTE                                 &kp DOWN                                &kp N             &kp M            &kp COMMA         &kp DOT          &kp FSLH           &kp ESC
// ╚═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╝  ╚═════════════════╝                      ╚═════════════════╝                    ╚═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╝
//                                                                            ╔═════════════════╦═════════════════╦═════════════════╗                                         ╔═════════════════╦═════════════════╦═════════════════╗
                                                                                    &kp LGUI        &lt 3 SPACE          &mo 1                                                       &mo 2          &lt 3 ENTER         &kp LALT
//                                                                            ╚═════════════════╩═════════════════╩═════════════════╝                                         ╚═════════════════╩═════════════════╩═════════════════╝
            >;
            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOLUME_DOWN>;
        };

        lower_layer {
            display-name = "NUMBER";
            bindings = <
// ╔═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╗                                           ╔═════════════════╗                    ╔═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╗
          &trans           &kp N1             &kp N2           &kp N3            &kp N4            &kp N5                                                     &mmv MOVE_UP                              &kp N6            &kp N7            &kp N8            &kp N9            &kp N0           &kp BSPC
// ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣                         ╔═════════════════╬═════════════════╬═════════════════╗  ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣
          &trans        &bt BT_CLR_ALL    &bt BT_SEL 0      &bt BT_SEL 1     &bt BT_SEL 2       &bt BT_SEL 3                               &mmv MOVE_LEFT       &mkp LCLK      &mmv MOVE_RIGHT         &kp LEFT          &kp DOWN           &kp UP           &kp RIGHT         &kp HOME          &kp PG_UP
// ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣  ╔═════════════════╗    ╚═════════════════╬═════════════════╬═════════════════╝  ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣
          &trans       &rgb_ug RGB_OFF   &rgb_ug RGB_ON        &trans            &trans        &rgb_ug RGB_EFF          &trans                               &mmv MOVE_DOWN                         &rgb_ug RGB_EFR   &rgb_ug RGB_SPI   &rgb_ug RGB_BRI   &rgb_ug RGB_BRD       &kp END          &kp PG_DN
// ╚═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╝  ╚═════════════════╝                      ╚═════════════════╝                    ╚═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╝
//                                                                            ╔═════════════════╦═════════════════╦═════════════════╗                                         ╔═════════════════╦═════════════════╦═════════════════╗
                                                                                    &trans           &trans             &trans                                                      &kp INS           &kp DEL           &trans
//                                                                            ╚═════════════════╩═════════════════╩═════════════════╝                                         ╚═════════════════╩═════════════════╩═════════════════╝
            >;
            sensor-bindings = <&scroll_encoder>;
        };

        raise_layer {
            display-name = "SYMBOL";
            bindings = <
// ╔═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╗                                           ╔═════════════════╗                    ╔═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╗
          &trans           &kp EXCL          &kp AT            &kp HASH         &kp DLLR         &kp PRCNT                                                    &mmv MOVE_UP                             &kp CARET         &kp AMPS          &kp ASTRK         &kp LPAR          &kp RPAR          &kp BSPC
// ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣                         ╔═════════════════╬═════════════════╬═════════════════╗  ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣
          &trans          &bt BT_CLR        &mkp LCLK         &mkp MCLK         &mkp RCLK        &mkp MB4                                   &mmv MOVE_LEFT      &mkp LCLK      &mmv MOVE_RIGHT         &kp MINUS         &kp EQUAL         &kp LBKT          &kp RBKT          &kp BSLH          &kp GRAVE
// ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣  ╔═════════════════╗    ╚═════════════════╬═════════════════╬═════════════════╝  ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣
          &trans         &out OUT_USB      &out OUT_BLE        &none              &none            &mkp MB5             &trans                               &mmv MOVE_DOWN                            &kp UNDER         &kp PLUS          &kp LBRC          &kp RBRC          &kp PIPE          &kp TILDE
// ╚═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╝  ╚═════════════════╝                      ╚═════════════════╝                    ╚═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╝
//                                                                            ╔═════════════════╦═════════════════╦═════════════════╗                                         ╔═════════════════╦═════════════════╦═════════════════╗
                                                                                    &trans            &trans           &kp SPACE                                                    &kp RET           &trans            &trans
//                                                                            ╚═════════════════╩═════════════════╩═════════════════╝                                         ╚═════════════════╩═════════════════╩═════════════════╝
            >;
            sensor-bindings = <&scroll_encoder>;
        };

        layer_3 {
            display-name = "Fn";
            bindings = <
// ╔═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╗                                           ╔═════════════════╗                    ╔═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╦═════════════════╗
      &studio_unlock       &kp F1            &kp F2            &kp F3            &kp F4            &kp F5                                                     &mmv MOVE_UP                              &kp F6            &kp F7            &kp F8            &kp F9            &kp F10           &kp F11
// ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣                         ╔═════════════════╬═════════════════╬═════════════════╗  ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣
        &trans             &trans          &mkp LCLK          &mkp MCLK        &mkp RCLK          &mkp MB4                                 &mmv MOVE_LEFT       &mkp LCLK      &mmv MOVE_RIGHT        &bootloader       &mkp LCLK         &mkp MCLK          &mkp RCLK      &kp PRINTSCREEN       &kp F12
// ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣  ╔═════════════════╗    ╚═════════════════╬═════════════════╬═════════════════╝  ╠═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╬═════════════════╣
        &trans           &sys_reset          &trans          &bootloader         &trans           &mkp MB5              &trans                               &mmv MOVE_DOWN                             &trans           &trans          &bootloader       &sys_reset      &kp SCROLLLOCK    &kp PAUSE_BREAK
// ╚═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╝  ╚═════════════════╝                      ╚═════════════════╝                    ╚═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╩═════════════════╝
//                                                                            ╔═════════════════╦═════════════════╦═════════════════╗                                         ╔═════════════════╦═════════════════╦═════════════════╗
                                                                                    &trans            &trans            &trans                                                       &trans           &trans            &trans
//                                                                            ╚═════════════════╩═════════════════╩═════════════════╝                                         ╚═════════════════╩═════════════════╩═════════════════╝
            >;
            sensor-bindings = <&scroll_encoder>;
        };
    };
};
